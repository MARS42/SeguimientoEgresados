<!DOCTYPE html>
<html lang="en">
@{
    var usuario = (Usuario)ViewBag.Usuario;
}
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - SeguimientoEgresados</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/SeguimientoEgresados.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Inicio" asp-action="Index">SeguimientoEgresados</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-content-center">
                <ul class="navbar-nav flex-grow-1 align-content-center">
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Inicio" asp-action="Index">Inicio</a></li>
                </ul>
              <form class="form-inline">
                <button class="btn btn-outline-success" type="button" asp-area="" asp-controller="Acceso" asp-action="Index">Main button</button>
              </form>
            </div>
        </div>
    </nav>
    @await Html.PartialAsync("_Secciones", 0);
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - SeguimientoEgresados - <a asp-area="" asp-controller="Inicio" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>