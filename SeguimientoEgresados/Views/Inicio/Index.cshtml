            @*     $1$ <div class="col-12 col-sm-6 col-md-12 col-lg-6 mb-2"> #1# *@
            @*     $1$     <button class="btn btn-primary w-100">Unirse al programa</button> #1# *@
            @*     $1$ </div> #1# *@
            @*     $1$ <div class="col-12 col-sm-6 col-md-12 col-lg-6"> #1# *@
            @*     $1$     <button href="#tarjetas" class="btn btn-outline-secondary w-100">Más información</button> #1# *@
            @*     $1$ </div> #1# *@
            @* </div> *@
        </article>
    </div>
</section>