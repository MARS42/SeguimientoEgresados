@model dynamic

@{
    ViewBag.Title = "Registro de empleador";
    Layout = "_Layout";
}

<div class="container p-4 vh-100">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <h3>Registro de empleador</h3>
                <!-- <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">1. Datos de acceso</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><a href="#">2. Datos de la empresa</a></li>
                </ol>
                </nav> -->
                <div class="container-fluid position position-relative">
                    <div class="form-step invisible row justify-content-center position-absolute mt-4 animate__animated animate__faster">
                        <div class="col-12 col-md-8 col-lg-7 col-xl-6">
                            <div class="row justify-content-end">
                                <h5>Datos de acceso</h5>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control display-3" id="floatingInput" name="User" placeholder="Correo electrónico">
                                        <label for="floatingInput"><i class="fa-solid fa-at mx-2"></i>Correo electrónico</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control display-3" id="floatingInput" name="Pass" placeholder="Contraseña">
                                        <label for="floatingInput"><i class="fa-solid fa-lock mx-2"></i>Contraseña</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control display-3" id="floatingInput" name="Pass2" placeholder="Confirmar contraseña">
                                        <label for="floatingInput"><i class="fa-solid fa-lock mx-2"></i>Confirmar contraseña</label>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <button type="button" data-step="0" data-stepmode="next" class="stepBtn btn btn-primary w-100">Siguiente<i class="fa-solid fa-angle-right mx-2"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-step invisible row justify-content-center position-absolute mt-4 animate__animated animate__faster">
                        <div class="col-12 col-md-8 col-lg-7 col-xl-6">
                            <div class="row justify-content-end">
                                <h5>Datos de la empresa</h5>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control display-3" id="floatingInput" name="NombreEmpresa" placeholder="Nombre de la empresa">
                                        <label for="floatingInput"><i class="fa-solid fa-building mx-2"></i>Nombre de la empresa</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="floatingInput" name="RFC" placeholder="RFC">
                                        <label for="floatingInput"><i class="fa-solid fa-id-card mx-2"></i>RFC</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="floatingInput" name="RazonSocial" placeholder="Razón social">
                                        <label for="floatingInput"><i class="fa-solid fa-comment mx-2"></i>Razón social</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="floatingInput" name="Domicilio" placeholder="Domicilio">
                                        <label for="floatingInput"><i class="fa-solid fa-location-crosshairs mx-2"></i>Domicilio</label>
                                    </div>
                                </div>
                                <div class="col-12 row m-0 p-0">
                                    <div class="col-12 col-lg-6">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="floatingInput" name="Colonia" placeholder="Colonia">
                                            <label for="floatingInput"><i class="fa-solid fa-road mx-2"></i>Colonia</label>
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-6">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="floatingInput" name="codigoPostal" placeholder="Código postal">
                                            <label for="floatingInput"><i class="fa-solid fa-envelopes-bulk mx-2"></i>Código postal</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 row m-0 p-0">
                                    <div class="col-12 col-lg-4">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="floatingInput" name="Pais" placeholder="Código País">
                                            <label for="floatingInput"><i class="fa-solid fa-earth-africa mx-2"></i>País</label>
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-4">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="floatingInput" name="Estado" placeholder="Estado">
                                            <label for="floatingInput">Estado</label>
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-4">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="floatingInput" name="Municipio" placeholder="Municipio">
                                            <label for="floatingInput">Municipio</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="floatingInput" name="correoEmpresarial" placeholder="Correo empresarial">
                                        <label for="floatingInput"><i class="fa-solid fa-envelopes-bulk mx-2"></i>Correo empresarial</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="floatingInput" name="Telefono" placeholder="Teléfono">
                                        <label for="floatingInput"><i class="fa-solid fa-phone mx-2"></i>Teléfono</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="floatingInput" name="paginaWeb" placeholder="P+agina web">
                                        <label for="floatingInput"><i class="fa-solid fa-globe mx-2"></i>Página web</label>
                                    </div>
                                </div>
                                <div class="col-6 col-md-4">
                                    <button type="button" data-step="1" data-stepmode="prev" class="stepBtn btn btn-secondary w-100">Volver<i class="fa-solid fa-angle-right mx-2"></i></button>
                                </div>
                                <div class="col-6 col-md-4">
                                    <button type="button" data-step="1" data-stepmode="next"  class="stepBtn btn btn-success w-100">Registrarse<i class="fa-solid fa-angle-right mx-2"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/registroEmpleador.js"></script>