@model SeguimientoEgresados.Models.ViewModels.RegistroEgresadoViewModel

@{
    ViewBag.Title = "Registro de egresado";
    //Layout = "_Layout";
}

<div class="container p-4">
    <form asp-action="Egresado" method="POST" class="card p-3">
        <div class="card-body">
            <div class="row">
                <h3>Registro de egresado</h3>
                <div class="stackpane container-fluid">
                        @* Datos de acceso *@
                    <div class="stack-item w-100 form-step invisible row justify-content-center animate__animated animate__faster">
                        <div class="col-12 col-md-8 col-lg-7 col-xl-6">
                            <div class="row justify-content-end">
                                <h5>Datos de acceso</h5>
                                @* Email *@
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Email" class="form-control display-3" placeholder="Correo electrónico">
                                        <label asp-for="Email"><i class="fa-solid fa-at mx-2"></i>Correo electrónico</label>
                                    </div>
                                    <span asp-validation-for="Email"></span>
                                </div>
                                @* Contraseña *@
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Password" type="password" class="form-control display-3" placeholder="Contraseña">
                                        <label asp-for="Password"><i class="fa-solid fa-lock mx-2"></i>Contraseña</label>
                                    </div>
                                    <span asp-validation-for="Password"></span>
                                </div>
                                @* Confirmar contraseña *@
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="password" class="form-control display-3" placeholder="Confirmar contraseña">
                                        <label><i class="fa-solid fa-lock mx-2"></i>Confirmar contraseña</label>
                                    </div>
                                </div>
                                @* Botón next *@
                                <div class="col-12 col-md-6 col-lg-5 col-xl-4">
                                    <button type="button" data-step="0" data-stepmode="next" class="stepBtn btn btn-primary w-100">Siguiente<i class="fa-solid fa-angle-right mx-2"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="stack-item form-step invisible row justify-content-center animate__animated animate__faster">
                        <div class="col-12 col-md-8 col-lg-7 col-xl-6">
                            <div class="row justify-content-end">
                                <h5>Datos del egresado</h5>
                                @* Nombres *@
                                <div class="col-12 col-lg-4">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Nombres" type="text" class="form-control display-3" placeholder="Nombre completo del representante">
                                        <label asp-for="Nombres"><i class="fa-solid fa-user-tie mx-2"></i>Nombre(s)</label>
                                    </div>
                                    <span asp-validation-for="Nombres"></span>
                                </div>
                                @* Apellido paterno *@
                                <div class="col-12 col-md-6 col-lg-4">
                                    <div class="form-floating mb-3">
                                        <input asp-for="ApellidoPaterno" type="text" class="form-control display-3" placeholder="Apellido 1">
                                        <label asp-for="ApellidoPaterno"><i class="fa-solid fa-user-tie mx-2"></i>A. paterno</label>
                                    </div>
                                    <span asp-validation-for="ApellidoPaterno"></span>
                                </div>
                                @* Apellido materno *@
                                <div class="col-12 col-md-6 col-lg-4">
                                    <div class="form-floating mb-3">
                                        <input asp-for="ApellidoMaterno" type="text" class="form-control display-3" placeholder="Apellido 2">
                                        <label asp-for="ApellidoMaterno"><i class="fa-solid fa-user-tie mx-2"></i>A. materno</label>
                                    </div>
                                    <span asp-validation-for="ApellidoMaterno"></span>
                                </div>
                                @* Geńero *@
                                <div class="col-12 col-md-6">
                                    <div class="form-floating mb-3">
                                        @* <input asp-for="Genero" class="form-control display-3" placeholder="Género"> *@
                                        <select asp-for="idGenero" asp-items="ViewBag.Generos" class="form-select"></select>
                                        <label asp-for="idGenero"><i class="fa-solid fa-genderless mx-2"></i>Género</label>
                                    </div>
                                    <span asp-validation-for="idGenero"></span>
                                </div>
                                @* Estado civil *@
                                <div class="col-12 col-md-6">
                                    <div class="form-floating mb-3">
                                        @* <input asp-for="EstadoCivil" class="form-control" placeholder="Estado civil"> *@
                                        <select asp-for="idEstadoCivil" asp-items="ViewBag.EstadosCiviles" class="form-select"></select>
                                        <label asp-for="idEstadoCivil"><i class="fa-solid fa-heart mx-2"></i>Estado civil</label>
                                    </div>
                                    <span asp-validation-for="idEstadoCivil"></span>
                                </div>
                                <h5>Datos de nacimiento</h5>
                                @* Datos nacimiento *@
                                <div class="col-12 row m-0 p-0">
                                    @* Fecha de egreso *@
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input asp-for="FechaNacimiento" class="form-control display-3" placeholder="Fecha nacimiento">
                                            <label asp-for="FechaNacimiento"><i class="fa-solid fa-calendar-day mx-2"></i>Fecha de nacimiento</label>
                                        </div>
                                        <span asp-validation-for="FechaNacimiento"></span>
                                    </div>
                                    <div class="col-12 col-lg-4">
                                        <div class="form-floating mb-3">
                                            <input asp-for="PaisNacimiento" type="text" class="form-control" placeholder="Código País">
                                            <label asp-for="PaisNacimiento"><i class="fa-solid fa-earth-africa mx-2"></i>País</label>
                                        </div>
                                        <span asp-validation-for="PaisNacimiento"></span>
                                    </div>
                                    <div class="col-12 col-lg-4">
                                        <div class="form-floating mb-3">
                                            <input asp-for="EstadoNacimiento" type="text" class="form-control" placeholder="Estado">
                                            <label asp-for="EstadoNacimiento">Estado</label>
                                        </div>
                                        <span asp-validation-for="EstadoNacimiento"></span>
                                    </div>
                                    <div class="col-12 col-lg-4">
                                        <div class="form-floating mb-3">
                                            <input asp-for="MunicipioNacimiento" type="text" class="form-control" placeholder="Municipio">
                                            <label asp-for="MunicipioNacimiento">Municipio</label>
                                        </div>
                                        <span asp-validation-for="MunicipioNacimiento"></span>
                                    </div>
                                </div>
                                <h5>Domicilio</h5>
                                @* Domicilio *@
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Domicilio" class="form-control" placeholder="Domicilio">
                                        <label asp-for="Domicilio"><i class="fa-solid fa-location-crosshairs mx-2"></i>Domicilio</label>
                                    </div>
                                    <span asp-validation-for="Domicilio"></span>
                                </div>
                                @* Colonia y CP *@
                                <div class="col-12 row m-0 p-0">
                                    <div class="col-12 col-lg-6">
                                        <div class="form-floating mb-3">
                                            <input asp-for="Colonia" class="form-control" placeholder="Colonia">
                                            <label asp-for="Colonia"><i class="fa-solid fa-road mx-2"></i>Colonia</label>
                                        </div>
                                        <span asp-validation-for="Colonia"></span>
                                    </div>
                                    <div class="col-12 col-lg-6">
                                        <div class="form-floating mb-3">
                                            <input asp-for="CodigoPostal" class="form-control" placeholder="Código postal">
                                            <label asp-for="CodigoPostal"><i class="fa-solid fa-envelopes-bulk mx-2"></i>Código postal</label>
                                        </div>
                                        <span asp-validation-for="CodigoPostal"></span>
                                    </div>
                                </div>
                                @* País, estado y municipío *@
                                <div class="col-12 row m-0 p-0">
                                    <div class="col-12 col-lg-4">
                                        <div class="form-floating mb-3">
                                            <input asp-for="Pais" class="form-control" placeholder="Código País">
                                            <label asp-for="Pais"><i class="fa-solid fa-earth-africa mx-2"></i>País</label>
                                        </div>
                                        <span asp-validation-for="Pais"></span>
                                    </div>
                                    <div class="col-12 col-lg-4">
                                        <div class="form-floating mb-3">
                                            <input asp-for="Estado" class="form-control" placeholder="Estado">
                                            <label asp-for="Estado">Estado</label>
                                        </div>
                                        <span asp-validation-for="Estado"></span>
                                    </div>
                                    <div class="col-12 col-lg-4">
                                        <div class="form-floating mb-3">
                                            <input asp-for="Municipio" class="form-control" placeholder="Municipio">
                                            <label asp-for="Municipio">Municipio</label>
                                        </div>
                                        <span asp-validation-for="Municipio"></span>
                                    </div>
                                </div>
                                @* Telefono *@
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Telefono" class="form-control" placeholder="Teléfono">
                                        <label asp-for="Telefono"><i class="fa-solid fa-phone mx-2"></i>Teléfono</label>
                                    </div>
                                    <span asp-validation-for="Telefono"></span>
                                </div>
                                @* Botón volver *@
                                <div class="col-12 col-md-6 col-lg-5 col-xl-4">
                                    <button type="button" data-step="1" data-stepmode="prev" class="stepBtn btn btn-secondary w-100"><i class="fa-solid fa-chevron-left mx-2"></i>Volver</button>
                                </div>
                                @* Botón next *@
                                <div class="col-12 col-md-6 col-lg-5 col-xl-4">
                                    <button type="button" data-step="1" data-stepmode="next" class="stepBtn btn btn-primary w-100">Siguiente<i class="fa-solid fa-angle-right mx-2"></i></button>
                                </div>
                                @* <div class="col-6 col-md-5 col-lg-5 col-xl-4"> *@
                                @*     <button type="submit" class="btn btn-success w-100" onclick="resizeStacks(); clickActionBtn(this);">Registrarse<i class="fa-solid fa-angle-right mx-2"></i></button> *@
                                @* </div> *@
                            </div>
                        </div>
                    </div>
                    <div class="stack-item form-step invisible row justify-content-center animate__animated animate__faster">
                        <div class="col-12 col-md-8 col-lg-7 col-xl-6">
                            <div class="row justify-content-end">
                                <h5>Datos escolares</h5>
                                @* No. control *@
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="NoControl" class="form-control display-3" placeholder="Número de control">
                                        <label asp-for="NoControl"><i class="fa-solid fa-id-card mx-2"></i>Número de control</label>
                                    </div>
                                    <span asp-validation-for="NoControl"></span>
                                </div>
                                @* Carrera *@
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        @* <input asp-for="Carrera" class="form-control display-3" placeholder="Carrera"> *@
                                        <select asp-for="idCarrera" asp-items="ViewBag.Carreras" class="form-select"></select>
                                        <label asp-for="idCarrera"><i class="fa-solid fa-graduation-cap mx-2"></i>Carrera</label>
                                    </div>
                                    <span asp-validation-for="idCarrera"></span>
                                </div>
                                @* Fecha de egreso *@
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="FechaEgreso" class="form-control display-3" placeholder="Fecha de egreso">
                                        <label asp-for="FechaEgreso"><i class="fa-solid fa-calendar-day mx-2"></i>Fecha de egreso</label>
                                    </div>
                                    <span asp-validation-for="FechaEgreso"></span>
                                </div>
                                @* Botón volver *@
                                <div class="col-6 col-md-5 col-lg-5 col-xl-4">
                                    <button type="button" data-step="2" data-stepmode="prev" class="stepBtn btn btn-secondary w-100"><i class="fa-solid fa-chevron-left mx-2"></i>Volver</button>
                                </div>
                                <div class="col-6 col-md-5 col-lg-5 col-xl-4">
                                    <button type="submit" class="btn btn-success w-100" onclick="resizeStacks(); clickActionBtn(this);">Registrarse<i class="fa-solid fa-angle-up mx-2"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>    
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    <script src="~/js/registroEmpleador.js"></script>
    <script src="~/js/redimensionarStacks.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
