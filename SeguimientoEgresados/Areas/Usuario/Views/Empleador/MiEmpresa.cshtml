@using SeguimientoEgresados.Models
@model Empresa

@{
    ViewBag.Title = "Mis datos";
    //Layout = "_Layout";
}

@* <h2>Empresa: @Html.DisplayFor(m => m.Nombre)</h2> *@
<div class="container p-4">
    <div class="row">
        <div class="col-12">
            <form asp-action="MiEmpresa" method="POST" class="card">
                <div class="card-body">
                    <h4 class="card-title">Modifique los datos su empresa</h4>
                    <div class="container-fluid my-3">
                        <div class="row justify-content-center animate__animated animate__fadeIn animate__faster">
                            <div class="col-12 col-md-8 col-lg-7 col-xl-6">
                                <div class="row justify-content-end">
                                    <h5>Datos de la empresa</h5>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input asp-for="Nombre" type="text" class="form-control display-3" placeholder="Nombre de la empresa">
                                            <label asp-for="Nombre"><i class="fa-solid fa-building mx-2"></i>Nombre de la empresa</label>
                                        </div>
                                        <span asp-validation-for="Nombre"></span>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input asp-for="Rfc" type="text" class="form-control" placeholder="RFC">
                                            <label asp-for="Rfc"><i class="fa-solid fa-id-card mx-2"></i>RFC</label>
                                        </div>
                                        <span asp-validation-for="Rfc"></span>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input asp-for="RazonSocial" type="text" class="form-control" placeholder="Razón social">
                                            <label asp-for="RazonSocial"><i class="fa-solid fa-comment mx-2"></i>Razón social</label>
                                        </div>
                                        <span asp-validation-for="RazonSocial"></span>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input asp-for="Domicilio" type="text" class="form-control" placeholder="Domicilio">
                                            <label asp-for="Domicilio"><i class="fa-solid fa-location-crosshairs mx-2"></i>Domicilio</label>
                                        </div>
                                        <span asp-validation-for="Domicilio"></span>
                                    </div>
                                    <div class="col-12 row m-0 p-0">
                                        <div class="col-12 col-lg-6">
                                            <div class="form-floating mb-3">
                                                <input asp-for="Colonia" type="text" class="form-control" placeholder="Colonia">
                                                <label asp-for="Colonia"><i class="fa-solid fa-road mx-2"></i>Colonia</label>
                                            </div>
                                            <span asp-validation-for="Colonia"></span>
                                        </div>
                                        <div class="col-12 col-lg-6">
                                            <div class="form-floating mb-3">
                                                <input asp-for="Cp" type="text" class="form-control" placeholder="Código postal">
                                                <label asp-for="Cp"><i class="fa-solid fa-envelopes-bulk mx-2"></i>Código postal</label>
                                            </div>
                                            <span asp-validation-for="Cp"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 row m-0 p-0">
                                        <div class="col-12 col-lg-4">
                                            <div class="form-floating mb-3">
                                                <input asp-for="Pais" type="text" class="form-control" placeholder="Código País">
                                                <label asp-for="Pais"><i class="fa-solid fa-earth-africa mx-2"></i>País</label>
                                            </div>
                                            <span asp-validation-for="Pais"></span>
                                        </div>
                                        <div class="col-12 col-lg-4">
                                            <div class="form-floating mb-3">
                                                <input asp-for="Estado" type="text" class="form-control" placeholder="Estado">
                                                <label asp-for="Estado">Estado</label>
                                            </div>
                                            <span asp-validation-for="Estado"></span>
                                        </div>
                                        <div class="col-12 col-lg-4">
                                            <div class="form-floating mb-3">
                                                <input asp-for="Municipio" type="text" class="form-control" placeholder="Municipio">
                                                <label asp-for="Municipio">Municipio</label>
                                            </div>
                                            <span asp-validation-for="Municipio"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input asp-for="CorreoEmpresa" type="text" class="form-control" placeholder="Correo empresarial">
                                            <label asp-for="CorreoEmpresa"><i class="fa-solid fa-envelopes-bulk mx-2"></i>Correo empresarial</label>
                                        </div>
                                        <span asp-validation-for="CorreoEmpresa"></span>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input asp-for="Telefono" type="text" class="form-control" placeholder="Teléfono">
                                            <label asp-for="Telefono"><i class="fa-solid fa-phone mx-2"></i>Teléfono</label>
                                        </div>
                                        <span asp-validation-for="Telefono"></span>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input asp-for="Website" type="text" class="form-control" placeholder="P+agina web">
                                            <label asp-for="Website"><i class="fa-solid fa-globe mx-2"></i>Página web</label>
                                        </div>
                                        <span asp-validation-for="Website"></span>
                                    </div>
                                    <div class="col-6 col-md-5 col-lg-5 col-xl-4">
                                        <button type="submit" class="btn btn-primary w-100" onclick="clickActionBtn(this);">Guardar<i class="fa-solid fa-floppy-disk mx-2"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@* <script src="~/js/registroEmpleador.js"></script> *@
