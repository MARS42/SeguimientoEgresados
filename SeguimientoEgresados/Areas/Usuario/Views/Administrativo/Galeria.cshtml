@model SubirImagenViewModel

<div class="container-fluid animate__animated animate__fadeIn">
    <h3>Galería</h3>
    <div class="row justify-content-center">
        <div class="col-12 mb-3 d-flex justify-content-center align-items-center">
            <form asp-action="SubirImagen" method="post" enctype="multipart/form-data" id="upload-form">
                <div class="row">
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="Titulo" id="NombreAlbum" class="form-control display-3" placeholder="Categoría o nombre de las imagenes">
                            <label asp-for="Titulo"><i class="fa-solid fa-image mx-2"></i>Categoría o nombre de las imagenes</label>
                        </div>
                        <span asp-validation-for="Titulo"></span>
                    </div>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <textarea  asp-for="Descripcion" class="form-control display-3" placeholder="Descripción general de las imagenes"></textarea>
                            <label asp-for="Descripcion"><i class="fa-solid fa-image mx-2"></i>Descripción general de las imagenes</label>
                        </div>
                        <span asp-validation-for="Descripcion"></span>
                    </div>
                    <div class="col-12">
                        <div class="mb-3 d-flex align-items-center">
                            <i class="fa-solid fa-tag me-2"></i>
                            <input asp-for="Tags" type="text" class="form-control form-control-sm" placeholder="Tags, ej. Egresados, graduación, ceremonia, reunión, etc.">
                        </div>
                        <span asp-validation-for="Tags"></span>
                    </div>
                    <hr class="invisible"/>
                    <div id="previews" class="col-12 row"></div>
                    <hr class="invisible"/>
                    <div class="col-12">
                        <div class="mb-3 d-flex align-items-center">
                            <i class="fa-solid fa-image me-2"></i>
                            <input name="imagenes" type="file" class="form-control" id="formFile" multiple onchange="previsualizarImagenes(this)">
                        </div>
                    </div>
                    <hr class="invisible"/>
                    <div class="col-12 col-md-6 col-lg-4">
                        <button type="submit" class="btn btn-primary w-100">Publicar imágenes<i class="fa-solid fa-cloud-arrow-up ms-2"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
